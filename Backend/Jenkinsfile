pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub_credentials')
        DOCKER_REPO = 'your-dockerhub-username/springboot-project'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'SofienDaad', 
                    url: 'https://github.com/devopsproject976/devops.git', 
                    credentialsId: 'jenkinss'
            }
        }

        stage('Build Spring Boot') {
            steps {
                dir('Backend') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Find Jar Version') {
            steps {
                dir('Backend') {
                    // Find the latest jar file in the target folder and store it in an environment variable
                    script {
                        env.JAR_FILE = sh(script: "ls target/*.jar | grep -v 'original' | head -n 1", returnStdout: true).trim()
                    }
                    echo "Using JAR file: ${env.JAR_FILE}"
                }
            }
        }

        stage('Docker Build Spring') {
            steps {
                dir('Backend') {
                    script {
                        docker.build("${DOCKER_REPO}:${env.BUILD_NUMBER}", "--build-arg JAR_FILE=${env.JAR_FILE} .")
                    }
                }
            }
        }

        stage('Docker Push Spring') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'DOCKERHUB_CREDENTIALS') {
                        sh "docker push ${DOCKER_REPO}:${env.BUILD_NUMBER}"
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo 'Build and Docker push succeeded!'
        }
        failure {
            echo 'Build or Docker push failed.'
        }
    }
}
