pipeline {
    agent any

    environment {
        DB_URL = 'jdbc:mysql://localhost:3306/devops'
        DB_USER = 'root'
        DB_PASSWORD = '' // Update with your actual password
    }

    stages {
        stage('Checkout') {
            steps {
                // Pull the code from the specified branch of your GitHub repository
                git branch: 'SofienDaad', 
                    url: 'https://github.com/devopsproject976/devops.git', 
                    credentialsId: 'jenkinss' // Use the credentials ID you created
            }
        }

        stage('MySQL Setup') {
            steps {
                script {
                    // Ensure MySQL is running before running the test
                    docker.image('mysql:latest').withRun('-e MYSQL_ALLOW_EMPTY_PASSWORD=yes -e MYSQL_DATABASE=devops -p 3306:3306') {
                        sh 'sleep 30' // Give MySQL some time to initialize
                    }
                }
            }
        }

        stage('Build') {
            steps {
                // Change directory to Backend to run Maven commands
                dir('Backend') {
                    // Run Maven clean and package commands
                    sh 'mvn clean package'
                }
            }
        }

        stage('Test') {
            steps {
                dir('Backend') {
                    // Run tests with Maven (JUnit and Mockito included)
                    sh 'mvn test'
                }
            }
        }
    }

    post {
        success {
            // Archive and display test results
            junit 'Backend/target/surefire-reports/*.xml'
            echo 'Build and tests succeeded!'
        }
        failure {
            
            echo 'Build or test failed.'
        }
    }
}
